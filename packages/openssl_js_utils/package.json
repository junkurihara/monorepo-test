{
  "name": "js-crypto-utils",
  "version": "0.7.0",
  "description": "JavaScript cryptographic utilities for OpenSSL-WebCrypto compatibility including PEM/X509-JWK converter.",
  "main": "dist/jscu.bundle.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --require @babel/register --recursive $(find test -name '*.spec.mjs')",
    "karma": "./node_modules/.bin/karma start",
    "babel": "NODE_ENV=production ./node_modules/.bin/babel src -d dist/ --keep-file-extension",
    "build": "./node_modules/.bin/webpack --mode development",
    "production": "./node_modules/.bin/webpack --mode production --optimize-minimize"
  },
  "author": "Jun Kurihara",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/junkurihara/jscu.git"
  },
  "bugs": {
    "url": "https://github.com/junkurihara/jscu/issues"
  },
  "homepage": "https://github.com/junkurihara/jscu#readme",
  "keywords": [
    "webcrypto",
    "jwk",
    "pem",
    "ec",
    "es6",
    "openssl"
  ],
  "devDependencies": {
    "@babel/cli": "7.1.0",
    "@babel/core": "7.1.0",
    "@babel/plugin-syntax-dynamic-import": "7.0.0",
    "@babel/plugin-transform-runtime": "7.1.0",
    "@babel/polyfill": "7.0.0",
    "@babel/preset-env": "7.1.0",
    "@babel/register": "7.0.0",
    "babel-eslint": "9.0.0",
    "babel-loader": "8.0.2",
    "babel-plugin-istanbul": "5.1.0",
    "chai": "^4.1.2",
    "eslint": "5.6.0",
    "karma": "3.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.2",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webpack": "3.0.5",
    "mocha": "^5.2.0",
    "mocha-sinon": "^2.1.0",
    "node-webcrypto-ossl": "1.0.38",
    "webpack": "4.19.1",
    "webpack-bundle-size-analyzer": "^2.7.0",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "@babel/plugin-transform-regenerator": "7.0.0",
    "@babel/runtime": "7.0.0",
    "asn1": "0.2.4",
    "asn1.js-rfc5280": "^3.0.0",
    "buffer": "5.2.1",
    "elliptic": "6.4.1",
    "pino": "5.6.0",
    "pino-pretty": "^2.2.0"
  },
  "browser": {
    "crypto": false,
    "node-webcrypto-ossl": false
  }
}
