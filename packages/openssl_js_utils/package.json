{
  "name": "js-crypto-utils",
  "version": "0.9.3",
  "description": "JavaScript cryptographic utilities for OpenSSL-WebCrypto compatibility including PEM/X509-JWK converter.",
  "main": "dist/jscu.bundle.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --require @babel/register --recursive $(find test -name '*.spec.js')",
    "karma": "./node_modules/.bin/karma start",
    "babel": "NODE_ENV=production ./node_modules/.bin/babel src -d dist/ --keep-file-extension",
    "build": "rm -rf dist/* && NODE_ENV=production ./node_modules/.bin/babel src -d dist/ --keep-file-extension && ./node_modules/.bin/webpack --mode production --optimize-minimize"
  },
  "author": "Jun Kurihara",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/junkurihara/jscu.git"
  },
  "bugs": {
    "url": "https://github.com/junkurihara/jscu/issues"
  },
  "homepage": "https://github.com/junkurihara/jscu#readme",
  "keywords": [
    "webcrypto",
    "jwk",
    "pem",
    "x509",
    "ec",
    "es6",
    "openssl"
  ],
  "devDependencies": {
    "@babel/cli": "7.1.2",
    "@babel/core": "7.1.2",
    "@babel/plugin-transform-runtime": "7.1.0",
    "@babel/polyfill": "7.0.0",
    "@babel/preset-env": "7.1.0",
    "@babel/register": "7.0.0",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.4",
    "babel-plugin-istanbul": "5.1.0",
    "chai": "^4.2.0",
    "eslint": "^5.6.1",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.2",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webpack": "3.0.5",
    "mocha": "^5.2.0",
    "mocha-sinon": "^2.1.0",
    "node-webcrypto-ossl": "^1.0.38",
    "webpack": "^4.20.2",
    "webpack-bundle-size-analyzer": "^2.7.0",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/runtime": "^7.1.2",
    "js-crypto-aes": "^0.1.3",
    "js-crypto-ec": "^0.2.0",
    "js-crypto-hash": "^0.1.2",
    "js-crypto-hkdf": "^0.2.2",
    "js-crypto-hmac": "^0.1.2",
    "js-crypto-key-utils": "^0.1.0",
    "js-crypto-random": "^0.1.2",
    "js-encoding-utils": "^0.2.6",
    "js-x509-utils": "^0.1.0"
  },
  "browser": {
    "crypto": false
  }
}
