{
  "version": "0.15.0",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.json",
        "*.txt",
        "test/**",
        "package.json"
      ]
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-lockfile"
      ]
    }
  },
  "packages": [
    "packages/*"
  ]
}
